<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.optho.opthoremedies.Fragments.Design1"
    android:background="#00FF00">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/opl1"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:src="@drawable/opl1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/Science1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/brand1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/brand1"
        android:layout_above="@+id/Science1"
        android:layout_alignEnd="@+id/cartoon1" />

    <ImageView
        android:id="@+id/Science1"
        android:layout_width="450dp"
        android:layout_height="180dp"
        android:src="@drawable/science1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="19dp"
        android:layout_above="@+id/cpl1"
        android:layout_alignEnd="@+id/brand1"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/cartoon1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/cartoon1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/indication1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/indication4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/opl1"
        android:layout_alignStart="@+id/cpl1" />

    <ImageView
        android:id="@+id/cpl1"
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:src="@drawable/cpl1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
