<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.optho.opthoremedies.Fragments.Design1"
    android:background="#00aF00">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/opl1"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:src="@drawable/opl3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/brand1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/brand1"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Science1"
        android:layout_marginEnd="59dp" />

    <ImageView
        android:id="@+id/Science1"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/science3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/opl1"
        android:layout_alignEnd="@+id/cartoon1" />

    <ImageView
        android:id="@+id/cartoon1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/cartoon3"
        android:layout_below="@+id/Science1"
        android:layout_alignEnd="@+id/cpl1" />

    <ImageView
        android:id="@+id/indication1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/indication4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/cpl1"
        android:layout_alignStart="@+id/cpl1" />

    <ImageView
        android:id="@+id/cpl1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/cpl3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
