<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.optho.opthoremedies.Design1"
    android:background="@drawable/graphics4">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/opl1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/opl4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/brand1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/brand4"
        android:layout_alignBottom="@+id/opl1"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/Science1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/science4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/brand1"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/cartoon1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/cartoon4"
        android:layout_above="@+id/cpl1"
        android:layout_alignEnd="@+id/cpl1" />

    <ImageView
        android:id="@+id/indication1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/indication4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/cpl1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:src="@drawable/cpl4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />





</RelativeLayout>
